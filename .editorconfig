# Root EditorConfig
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = 4

[*.gradle]
indent_style = tab
indent_size = 4

[*.{yml,yaml,json,md}]
indent_style = space
indent_size = 2

[*.java]
indent_style = tab
indent_size = 4
ij_java_imports_layout = java;javax;net.fabricmc;net.minecraft;|;io.github;#

# Prevent trimming in Markdown tables
[*.md]
trim_trailing_whitespace = false
